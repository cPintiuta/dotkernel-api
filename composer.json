{
    "name": "dotkernel/api",
    "type": "project",
    "description": "DotKernel API",
    "license": "MIT",
    "homepage": "https://github.com/dotkernel/api",
    "keywords": [
        "api",
        "REST",
        "REST API",
        "mezzio",
        "laminas"
    ],
    "authors": [
        {
            "name": "DotKernel Team",
            "email": "team@dotkernel.com"
        }
    ],
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "dotkernel/*": true,
            "laminas/laminas-dependency-plugin": true,
            "laminas/laminas-component-installer": true,
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "extra": {
        "laminas": {
            "component-whitelist": [
                "laminas/laminas-httphandlerrunner"
            ]
        },
        "mezzio": {
            "component-whitelist": [
                "mezzio/mezzio",
                "mezzio/mezzio-helpers",
                "mezzio/mezzio-router",
                "mezzio/mezzio-fastroute"
            ]
        }
    },
    "require": {
        "php": "^7.4",
        "ext-json": "*",
        "brick/math": "^0.8",
        "dotkernel/dot-annotated-services": "^3.1",
        "dotkernel/dot-cli": "^3.0",
        "dotkernel/dot-doctrine-metadata": "^3.0",
        "dotkernel/dot-errorhandler": "^3.1",
        "dotkernel/dot-mail": "^3.2",
        "dotkernel/dot-response-header": "^3.0",
        "laminas/laminas-component-installer": "^2.6",
        "laminas/laminas-config": "^3.7",
        "laminas/laminas-config-aggregator": "^1.7",
        "laminas/laminas-db": "^2.13",
        "laminas/laminas-dependency-plugin": "^2.2",
        "laminas/laminas-diactoros": "^2.8",
        "laminas/laminas-http": "^2.15",
        "laminas/laminas-hydrator": "^4.3",
        "laminas/laminas-inputfilter": "^2.13",
        "laminas/laminas-paginator": "^2.12",
        "laminas/laminas-servicemanager": "^3.10",
        "laminas/laminas-stdlib": "^3.7",
        "laminas/laminas-text": "^2.9",
        "mezzio/mezzio": "^3.6",
        "mezzio/mezzio-authentication": "^1.4",
        "mezzio/mezzio-authentication-oauth2": "^2.3",
        "mezzio/mezzio-authorization-acl": "^1.3",
        "mezzio/mezzio-authorization-rbac": "^1.3",
        "mezzio/mezzio-cors": "^1.3",
        "mezzio/mezzio-fastroute": "^3.4",
        "mezzio/mezzio-helpers": "^5.8",
        "mezzio/mezzio-problem-details": "^1.5",
        "mezzio/mezzio-twigrenderer": "^2.9",
        "ramsey/uuid-doctrine": "^1.8",
        "roave/psr-container-doctrine": "^3.1",
        "roave/security-advisories": "dev-master"
    },
    "require-dev": {
        "laminas/laminas-coding-standard": "^2.3",
        "laminas/laminas-development-mode": "^3.6",
        "mezzio/mezzio-tooling": "^1.4",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Api\\Admin\\": "src/Admin/src/",
            "Api\\App\\": "src/App/src/",
            "Api\\User\\": "src/User/src/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@development-enable"
        ],
        "development-disable": "laminas-development-mode disable",
        "development-enable": "laminas-development-mode enable",
        "development-status": "laminas-development-mode status",
        "mezzio": "mezzio --ansi",
        "check": [
            "@cs-check",
            "@test",
            "@analyze"
        ],
        "analyze": "phpstan analyze -l max -c ./phpstan.installer.neon ./src ./config",
        "clear-config-cache": "php bin/clear-config-cache.php",
        "cs-check": "phpcs",
        "cs-fix": "phpcbf",
        "serve": "php -S 0.0.0.0:8080 -t public/",
        "test": "phpunit --colors=always",
        "test-coverage": "phpunit --colors=always --coverage-clover clover.xml"
    }
}
